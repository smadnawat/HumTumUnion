 

 
 <%= form_for :like , url: article_likes_path(@article) , :remote => "true" do |f| %>
         <%= f.hidden_field :user_id , :value => current_user.id , :readonly =>true %>
		  <% if user_like(current_user.id,@article.id).count == 0 %>
		   <%= f.submit "Like", :class => "button" %>
		 <% else %>
		    <%= f.submit "Unike",:class => "button" %>
		<% end %>
  <font color="660033"><%= pluralize(article_total_likes(@article.id).count, "Like") %></font>
<% end %>