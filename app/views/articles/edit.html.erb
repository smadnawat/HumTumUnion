
<center>
<h1>Edit Event</h1>
 
<%= form_for :article, url: user_article_path(@user,@article), method: :patch do |f| %> 
 
  <p>
    <%= f.label :title , "Event Title" %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text , "About Event" %><br>
    <%= f.text_area :text %>
  </p>

   <p>
    <%= f.label :date , "Date of Event" %><br>
    <%#= f.date_select :date %>
    <%= f.text_field :date,:size => '20%',:readonly => 'true' ,:class =>'datepicker' %>
  </p>


  <p>
    <%= f.label :image ,"Upload image" %><br>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit  "Update Event" ,:class => "button" %>
  </p>
 
<% end %>
 
<br>
<%= link_to 'Home' , show_path(@user), :class => "links" %>
<br>
<%= link_to 'Back' , :back , :class => "links" %>

 </center>




<script>

 $(document).ready(function(){
    $('.datepicker').datepicker({format: 'yyyy-mm-dd' ,startDate: '+0d',
        autoclose: true});
  });
</script>

