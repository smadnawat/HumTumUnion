<center>
  <h3><font color="red"><u>After successfull updation of your password you need to login again.</u></font></h3>
     <h1><font color="green">Update Password</font></h1>
   
       <p>
        <%#= render 'shared/error_messages' %>
        <%= flash[:notice] %>
       </p>

     <%= form_for :user , url: update_password_path(current_user)  do |f| %>
     
       <table>
           <tr>
             <td>  <%= f.label :password ,"Old password" %> </td>
             <td>  <%= f.password_field :password %> </td>
           </tr>
           <tr>
             <td> <%= f.label :new_password , "New password"%></td>
             <td> <%= f.password_field :new_password %> </td>
           </tr>

           <tr>
             <td> <%= f.label :confirmation, "Password confirmation"%></td>
             <td> <%= f.password_field :password_confirmation %></td>
           </tr>
            
           <tr>
             <td> <%= f.submit "Update Password" , :class => "button" %></td>
                <!--  <td> <%#= link_to "Already registered" , login_path %></td> -->
           </tr>
       


       </table>

      <% end %>
   </center>